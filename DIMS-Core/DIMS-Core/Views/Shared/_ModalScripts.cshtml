<script type="text/javascript">
    $(document).ready(() => {
        $('#task-table').on('click', '.edit-btn', function () {
            let taskId = $(this).getData('id');
    
            $.ajax({
                url: '{tasks/edit}/{taskId}',
                success: (html) => {
                    $('#task-modal').html(html);
                },
                error: (msg) => {
                    console.log(msg);
                }
            })
