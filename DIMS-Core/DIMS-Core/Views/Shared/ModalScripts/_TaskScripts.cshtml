<script type="text/javascript">
    $(document).ready(() => {
        const controllerName = "tasks";
        
        $.ajaxSetup({ cache: false });
        
        $('#task-table')
            .on('click', '.btn-details', function () {
                const taskId = $(this).data("id");
            
                $.ajax({
                    url: `${controllerName}/details/${taskId}`,
                    type: "GET",
                    success: (context) => {
                        $('#task-edit-modal').html(context)
                            .modal('show');
                    },
                    error: (msg) => {
                        console.log(msg);
                    }
                });
            })
            .on('click', '.btn-edit', function () {
                let taskId = $(this).data('id');
        
                $.ajax({
                    url: '{tasks/edit}/{taskId}',
                    success: (html) => {
                        $('#task-edit-modal').html(html);
                    },
                    error: (msg) => {
                        console.log(msg);
                    }
                });
            });
    })
</script>