@model TaskViewModel

@{
    ViewBag.Title = $"{Model.Name} details";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-body">
            <h2 class="text-center mb-4">Task details</h2>
            <div class="form-group row py-2">
                <label asp-for="Name" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Name" class="form-control" readonly/>
                </div>
            </div>
            <div class="form-group row py-2">
                <label asp-for="Description" class="col-sm-4 control-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Description" class="form-control" readonly/>
                </div>
            </div>
            <div class="form-group row py-2">
                <label asp-for="StartDate" class="col-sm-4 control-label">Start date</label>
                <div class="col-sm-8">
                    <input asp-for="StartDate" class="form-control" readonly/>
                </div>
            </div>
            <div class="form-group row py-2">
                <label asp-for="DeadlineDate" class="col-sm-4 control-label">Deadline date</label>
                <div class="col-sm-8">
                    <input asp-for="DeadlineDate" class="form-control" readonly/>
                </div>
            </div>
            <div class="form-group row py-2">
                <label class="col-sm-4 control-label">Users</label>
                <div class="col-sm-8">
                    <div style="border-radius: 5px; border: 1px solid #808080;">
                        @foreach (var userTask in Model.UserTasks)
                        {
                            <div class="form-check ml-1 my-1">
                                <label class="form-check-label">@userTask.User.FullName</label>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="form-group d-flex justify-content-sm-end mt-2">
                @await Html.PartialAsync("_BackToList", new BackToListViewModel
                                                        {
                                                            Action = "Index", Controller = "Task"
                                                        })
            </div>
        </div>
    </div>
</div>
