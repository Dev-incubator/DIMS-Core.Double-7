@model UserTaskViewModel

@{
    ViewData["Title"] = "Task Create";
}


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-body">
            <form asp-action="create" asp-antiforgery="true">
                <h2 class="text-center">Create new task</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row py-2">
                    <label asp-for="Task.Name" class="col-sm-4 control-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Task.Name" class="form-control"/>
                        <span asp-validation-for="Task.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <label asp-for="Task.Description" class="col-sm-4 control-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Task.Description" class="form-control"/>
                        <span asp-validation-for="Task.Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <label asp-for="Task.StartDate" class="col-sm-4 control-label">Start date</label>
                    <div class="col-sm-8">
                        <input asp-for="Task.StartDate" class="form-control"/>
                        <span asp-validation-for="Task.StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <label asp-for="Task.DeadlineDate" class="col-sm-4 control-label">Deadline date</label>
                    <div class="col-sm-8">
                        <input asp-for="Task.DeadlineDate" class="form-control"/>
                        <span asp-validation-for="Task.DeadlineDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <label asp-for="User.FullName" class="col-sm-4 control-label">Users</label>
                    <div class="col-sm-8">
                        <input asp-for="Task.DeadlineDate" class="form-control"/>
                        <span asp-validation-for="Task.DeadlineDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group d-flex justify-content-sm-center">
                    <input type="submit" value="Save" style="width: 18%" class="btn btn-primary mr-2"/>
                    @await Html.PartialAsync("_BackToList", new BackToListViewModel{ Action = "Index", Controller = "Task" })
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScripts"); }
}