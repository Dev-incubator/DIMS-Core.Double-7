@model TaskTrackViewModel

@{
    ViewData["Title"] = "Task Create";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-body">
            <h2 class="mb-4 text-center">Create new task track</h2>
            <form asp-action="create" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row py-1">
                    <label asp-for="UserTaskId" class="col-sm-4 control-label">Task</label>
                    <div class="col-sm-8">
                        <input asp-for="UserTaskId" class="form-control" />
                        <span asp-validation-for="UserTaskId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-1">
                    <label asp-for="TrackDate" class="col-sm-4 control-label">Date</label>
                    <div class="col-sm-8">
                        <input asp-for="TrackDate" class="form-control" />
                        <span asp-validation-for="TrackDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row pt-1 pb-4">
                    <label asp-for="TrackNote" class="col-sm-4 control-label">Note</label>
                    <div class="col-sm-8">
                        <textarea asp-for="TrackNote" class="form-control"></textarea>
                        <span asp-validation-for="TrackNote" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group d-flex justify-content-sm-center">
                    <input type="submit" value="Save" style="width: 18%" class="btn btn-primary mr-2" />
                    @await Html.PartialAsync("_BackToList", new BackToListViewModel { Action = "Index", Controller = "TaskTrack" })
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
      @{ await Html.RenderPartialAsync("_ValidationScripts"); }
  }