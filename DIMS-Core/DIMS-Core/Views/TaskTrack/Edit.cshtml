@model TaskTrackViewModel

@{
    ViewData["Title"] = "Task Edit";
}

<div class="modal-content">
    <div class="modal-header">
        <h4>Edit task track</h4>
    </div>
    <div class="modal-body">
        <dl class="dl-horizontal">
            <form asp-action="create" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(user => user.TaskTrackId)
                <div class="form-group">
                    <label asp-for="UserTaskId" class="control-label">Task</label>
                    <input asp-for="UserTaskId" class="form-control" />
                    <span asp-validation-for="UserTaskId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TrackDate" class="control-label">Date</label>
                    <input asp-for="TrackDate" class="form-control" />
                    <span asp-validation-for="TrackDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TrackNote" class="control-label">Note</label>
                    <input asp-for="TrackNote" class="form-control" />
                    <span asp-validation-for="TrackNote" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-sm-center">
                    <input type="submit" value="Add" class="btn btn-success mr-2" />
                    <button class="btn btn-outline-dark close" data-dismiss="modal" area-hidden="true">Back to List</button>
                </div>
            </form>
        </dl>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScripts"); }
}